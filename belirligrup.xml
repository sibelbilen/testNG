<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression Suite" verbose="1" >
    <test name="Regression1">
        <groups>
            <run>
                <include name="RegressionGroup1"  />
            </run>
        </groups>
        <!--Sadece "include" olan methodlar çalışır -->
        <!--"exclude" olan methodlar harici tüm methodlar çalışır-->
        <packages>
            <package name="techproed.*" />
        </packages>
        <!-- "<package name="techproed.*" />" ==> Tüm projede "techproed" paketi altındaki tüm @Test methodlarını tarar ve "RegressionGroup1" ismi ile gruplanmış testleri çalıştırır-->

    </test>

</suite>